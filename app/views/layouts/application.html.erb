<!DOCTYPE html>
<html>
  <head>
    <title>CourierApp</title>
    <%= csrf_meta_tags %>
    <script>
      var App = App || {};
      App.currentUser = <%= @current_user.to_json.html_safe %>;
    </script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <nav>
      <div class="nav-wrapper light-blue lighten-2">
        <a href="#" class="brand-logo">Courier App</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <% if @current_user %>
          <li><%= link_to "My Profile", user_path(@current_user) %></li>
          <li><a href="/orders/pending_orders">My Pending Orders</a></li>
          <li><a href="/orders/potential_deliveries">Potential Deliveries</a></li>
          <li><a href="/logout">Logout</a></li>
          <% end %>
          <li><a href="/orders">Orders</a></li>
          <li><a href="/users">Users</a></li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>
