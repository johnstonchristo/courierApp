<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Item description</th>
      <th>Item weight</th>
      <th>Item height</th>
      <th>Item depth</th>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Courier</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.item_description %></td>
        <td><%= order.item_weight %></td>
        <td><%= order.item_height %></td>
        <td><%= order.item_depth %></td>
        <td><%= order.sender_id %></td>
        <td><%= order.receiver_id %></td>
        <td><%= order.courier_id %></td>
        <td><%= order.state %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

