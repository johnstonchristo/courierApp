<div class="container">
    <div class="row">
        <div class="card-panel white z-depth-5">


<h3>
  Packages available for delivery.
</h3>




<table class="highlight">
  <thead>
    <tr>
      <th>Item</th>
      <th>Pickup Location</th>
      <th>Delivery Location</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
    <%= order.item_description  %>
      </td>
      <td>
  <%= order.sender_location.full_street_address  %>
      </td>
      <td>
  <%= order.receiver_location.full_street_address  %>
      </td>
      <td>
          <%= link_to("Accept", "/orders/#{order.id}/accept_potential_delivery",method: :get, data: {confirm: "Are you sure you want to deliver this order?"},  class: "waves-effect waves-light btn light-blue lighten-2 right") %>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>

</div>
</div>
</div>
