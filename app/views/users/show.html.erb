<p id="notice"><%= notice %></p>
<div class="container">
<div class="row">

<div class="col s6">
  <h4>Hi <%= @user.first_name %>!</h4>
  <h5>My details:</h5>
</div>

<div class="col s6">
  <a href="/orders/new"class="waves-effect waves-light btn right red">NEW ORDER</a>
</div>

</div>

<div class="row">
  <div class="col s6">
<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %>
</div>

<div class="col s6">
<% if @user.link %>
    <div class="col s6">
      <td><%= image_tag @user.link, id:"profile" %></td>
    </div>
  <% end %>

</div>
</div>
<hr>
<h5>My Active Orders:</h5>
<% @orders.each do |order| %>
  <p>
    <a>
      <%= link_to(order.item_description, "/orders/#{order.id}")%>
    </a>
  </p>
  <% end %>
</div>
