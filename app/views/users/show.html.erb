<p id="notice"><%= notice %></p>

  <h4>Hi <%= @user.first_name %>!</h4>
  <h5>My details:</h5>



  <a href="/orders/new"class="waves-effect waves-light btn right red">NEW ORDER</a>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<%= link_to 'Edit', edit_user_path(@user) %>



<% if @user.link %>
    <div class="col s6">
      <td><%= image_tag @user.link, id:"profile" %></td>

  <% end %>


<hr>
<h5>My Outbound Orders:</h5>
<% @send_orders.each do |order| %>
  <p>
    <a>
      <%= link_to(order.item_description, "/orders/#{order.id}")%>
    </a>
  </p>
  <% end %>
  <hr>
  <h5>My Inbound Orders:</h5>
  <% @receive_orders.each do |order| %>
    <p>
      <a>
        <%= link_to(order.item_description, "/orders/#{order.id}")%>
      </a>
    </p>
    <% end %>
